
/* search details */
.search-bar {
  display: flex;
  margin: 0px auto;
  background: #FFFFFF;
  border: 1px solid #E5E5E5;
  box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.25);
  border-radius: 3px;
  width: 229px;
  height: 32px;
  margin-bottom: 15px;
}
.search-bar input {
  position: relative;
  top: 5px;
  left: 10px;
}

/* card styling */
.card {
  height: 140px;
  background-size: cover !important;
  background-position: center;
  color: white;
  display: flex;
  margin: 5px;
  width: 45%;
  justify-content: center;
  align-items: center;
}
.card-wrap {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.card-category {
  font-size: 15px;
  text-transform: capitalize;
}

