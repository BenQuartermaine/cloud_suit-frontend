/* Reviews section */
.message {
  display: flex;
  align-items: center;
  padding: 20px;
  background: #FFFFFF;
  border: 1px solid #E5E5E5;
  box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.25);
  border-radius: 3px; 
  margin: 10rpx;
}
.message:last-child {
  border-bottom: none;
}
.avatar-large {
  border-radius: 50%;
  width: 40px;
  height: 40px;
}
.body-wrapper {
  display: flex;
  flex-direction: column;
}
.message-name {
  padding-left: 10px;
  min-width: 100px;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}
.message-body {
  padding-left: 10px;
  font-size: 13px;
  color: rgba(0,0,0,0.7);
}
//MyPlanesTrips styling
.statebar {
  display: flex;
  justify-content: center;
  background: #fff;
  margin-top: 20rpx;
  margin-right: 20rpx;
}
.statebar .item { 
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  background: #FCFCFC;
  border: 1px solid #1D1F34;
  font-size: 30rpx;
  padding: 10rpx;
  margin-top: 20rpx;
}
.statebar .item.active {
  background: #1D1F34;
  color: #fff;
  font-size: 30rpx;
  padding: 10rpx;
}
.statebar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
}

