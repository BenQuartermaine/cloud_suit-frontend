/* User information and avatar */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 50rpx 0rpx 40rpx 0rpx;
}
.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  margin-top: 20rpx;
  color: #1D1F34;
}
/* Button styling */
.list-button button {
  background: #872426;
  border-radius: 50px;
  color: white;
  padding: 0rpx 60rpx;
  font-size: 30rpx;
  margin: 20rpx 0rpx 0rpx 10rpx;
}
 
