.navbar {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 60rpx;
}

/* Reviews section */
.message {
  display: flex;
  align-items: center;
  padding: 20px;
  background: #fff;
  border: 1px solid #e5e5e5;
  box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.25);
  border-radius: 3px;
}

.review-button, .list-button button {
  background: #872426;
  border-radius: 50px;
  color: white;
  padding: 0rpx 10rpx;
  min-width: 140rpx;
  font-size: 30rpx;
}

.list-button button {
  position: absolute;
  left: 25rpx;
  top: 25rpx;
}

.avatar-large {
  border-radius: 50%;
  width: 40px;
  height: 40px;
}

.body-wrapper {
  display: flex;
  flex-direction: column;
}

.message-name {
  padding-left: 10px;
  min-width: 100px;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.message-body {
  padding-left: 10px;
  font-size: 13px;
  color: rgba(0, 0, 0, 0.7);
}

.statebar {
  position: absolute;
  right: 25rpx;
  top: 25rpx;
}

.statebar .item {
  background: #fcfcfc;
  border: 1px solid #1d1f34;
  font-size: 30rpx;
  padding: 10rpx;
  margin-top: 20rpx;
  border-radius: 0px 4px 4px 0px;
}

.statebar .item.active {
  background: #1d1f34;
  color: #fff;
  border-radius: 4px 0px 0px 4px;
  font-size: 30rpx;
  padding: 10rpx;
}

.navbar-wrapper {
  padding: 50rpx;
}

.navbar .item.active {
  background: #1d1f34;
  border-radius: 4px 0px 0px 4px;
  color: white;
  border: 1px solid #1d1f34;
  padding: 10rpx;
  font-size: 30rpx;
}

.navbar .item {
  background: #fcfcfc;
  border: 1px solid #1d1f34;
  border-radius: 0px 4px 4px 0px;
  padding: 10rpx;
  font-size: 30rpx;
}
.shootbar .item {
  background: #fcfcfc;
  border: 1px solid #1d1f34;
  font-size: 30rpx;
  padding: 10rpx;
}
.shootbar .item.active {
  background: #1d1f34;
  color: #fff;
  font-size: 30rpx;
  padding: 10rpx;
}
