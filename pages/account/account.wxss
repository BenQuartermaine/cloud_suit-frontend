/* pages/account/account.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 160rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upcoming, .history, .renter, .rentee{
  width:200rpx;
  height: 60rpx;
  text-align: center;
} 
button {
  margin-top: 40rpx;
  background: #872426;
  color: #FCFCFC;
}
 
.upcoming, .renter {
 background: #1D1F34;
 color: white;
}
.history, .rentee{
  background: lightgrey;
  opacity: 0.8;
}
 .row {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
  border-radius: 5px;
} 