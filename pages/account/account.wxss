/* Reviews section */
.message {
  display: flex;
  align-items: center;
  padding: 20px;
  background: #FFFFFF;
  border: 1px solid #E5E5E5;
  box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.25);
  border-radius: 3px; 
}
.message:last-child {
  border-bottom: none;
}
.avatar-large {
  border-radius: 50%;
  width: 40px;
  height: 40px;
}
.body-wrapper {
  display: flex;
  flex-direction: column;
}
.message-name {
  padding-left: 10px;
  min-width: 100px;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}
.message-body {
  padding-left: 10px;
  font-size: 13px;
  color: rgba(0,0,0,0.7);
}


