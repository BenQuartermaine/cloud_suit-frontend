/* pages/account/account.wxss */

/* User information and avatar */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 50rpx 0rpx 40rpx 0rpx;
}
.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  margin-top: 20rpx;
  color: #1D1F34;
}
/* Button styling */
.list-button button {
  background: #872426;
  border-radius: 50px;
  color: white;
  padding: 0rpx 60rpx;
  font-size: 30rpx;
  margin: 20rpx 0rpx 0rpx 10rpx;
}
 
 /* toggle between user states */
 .state-wrapper {
display: flex;
justify-content: center;
margin: 20rpx 10rpx 0rpx 0rpx;
}
.planes-trips {
  padding: 20rpx 20rpx;
  font-size: 25rpx;
 }
.my-planes {
  background: #1D1F34;
  border-radius: 4px 0px 0px 4px;
  color: white;
  border: 1px solid #1D1F34;
}
.my-trips {
  background: #FCFCFC;
  border: 1px solid #1D1F34;
  border-radius: 0px 4px 4px 0px;
}
.navbar-wrapper {
  display: flex;
  justify-content: space-between;
}

/* Upcoming and history slide */
.trips-wrapper {
  display: flex;
  justify-content: center;
}
.up-hist {
  padding: 10rpx 20rpx;
  font-size: 25rpx;
  margin-top: 20rpx;
 }
.upcoming {
  background: #1D1F34;
  border-radius: 4px 0px 0px 4px;
  color: white;
  border: 1px solid #1D1F34;
}
.history {
  background: #FCFCFC;
  border: 1px solid #1D1F34;
  border-radius: 0px 4px 4px 0px;
}