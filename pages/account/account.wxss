/* pages/account/account.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 50rpx 0rpx 40rpx 0rpx;
}

.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 20rpx;
  color: #aaa;
}

.wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upcoming, .history, .renter, .rentee{
  width:200rpx;
  height: 60rpx;
  text-align: center;
} 
button {
  margin-top: 40rpx;
  background: #872426;
  border-radius: 50px;
  color: white;
  padding: 0rpx 60rpx;
  font-size: 30rpx;
}
 
.renter {
background: #1D1F34;
border-radius: 4px 0px 0px 4px;
color: white;
padding: 10rpx 20rpx;
border: 1px solid #1D1F34;
}
.rentee {
background: #FCFCFC;
border: 1px solid #1D1F34;
border-radius: 0px 4px 4px 0px;
padding: 10rpx 20rpx;
}
.row {
display: flex;
justify-content: center;
margin-top: 40rpx;
border-radius: 5px;
} 
.banner {
  margin-top: 30rpx;
  margin: 20rpx;
}
.header{
  font-weight: bold;
  font-size: 50rpx;
}
.tag-line {
  font-weight: bold;
  font-size: 45rpx;
  padding: 40rpx;
}