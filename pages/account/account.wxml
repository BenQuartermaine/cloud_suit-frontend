<!--pages/account/account.wxml-->

<!-- list and state operator functionality -->
<view class='navbar-wrapper'>
  <view class='list-button'>
    <button bindtap="buttonLink">List</button>
  </view>
  
  <view class="state-wrapper">
      <view class="planes-trips my-planes">My Planes</view>
      <view class="planes-trips my-trips">My Trips</view>
  </view>
</view>

<!-- user information and avatar -->
<view class="userinfo">
  <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
  <text class="userinfo-nickname">{{userInfo.nickName}}</text>
</view>

<!-- upcoming and history slider -->
<view class="trips-wrapper">
  <view class="up-hist upcoming">Upcoming</view>
  <view class="up-hist history">History</view>
</view>

