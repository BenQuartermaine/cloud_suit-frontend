<!--pages/account/account.wxml-->

<!-- list and state operator functionality -->
<view class='navbar-wrapper'>
  <view class='list-button'>
    <button bindtap="buttonLink">List</button>
  </view>
  
  <view class="state-wrapper">
      <view class="planes-trips my-planes">My Planes</view>
      <view class="planes-trips my-trips">My Trips</view>
  </view>
</view>

<!-- user information and avatar -->
<view class="userinfo">
  <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
  <text class="userinfo-nickname">{{userInfo.nickName}}</text>
</view>

<!-- upcoming and history slider -->
<view class="trips-wrapper">
  <view class="up-hist upcoming">Upcoming</view>
  <view class="up-hist history">History</view>
</view>

<!-- Upcoming trips if/else statementâ€”How can we implement the logic for  -->

<block wx:if="{{jet}}">
 <block wx:for="{{jet}}">
  <view class="message">
    <image class="avatar-large" src="https://kitt.lewagon.com/placeholder/users/{{jet.name}}"></image>
    <view class='body-wrapper'>
      <view class="message-name">
        <text class='name-date'>Gab Dehan | 2 months ago</text>
        <view wx:if="{{reviews.content}}">{{reviews.content}}</view> 
        <view wx:else>Sooo much CAVIAR.</view>
      </view>
    </view>
  </view>
 </block>
</block> 

<block wx:else="{{fakie}}">
 <block wx:for="{{fakie}}" wx:for-item="fake">
  <view class="message">
    <image class="avatar-large" src="https://kitt.lewagon.com/placeholder/users/{{fake.name}}"></image>
    <view class='body-wrapper'>
      <view class="message-name">
        <text class='name-date'>{{fake.name}} | 2 months ago</text>
        <view wx:if="{{fake.description}}">{{fake.description}}</view> 
        <view wx:else>Sooo much CAVIAR.</view>
      </view>
    </view>
  </view>
 </block>
</block>
  

