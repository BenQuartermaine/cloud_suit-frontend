
/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 160rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

/**Card styling**/
.card {
  height: 70rpx;
  background-size: cover !important;
  background-position: center;
  color: white;
  position: relative;
  margin: 5rpx;
  align-content: center;
}
.card-user {
  width: 20rpx;
  height: 15rpx;
  border-radius: 50%;
}
.card-category {
  font-size: 8rpx;
  text-transform: uppercase;
  text-align: center;
}
.card-description {
  display: flex;
  justify-content: center;
  padding: 4rpx;
}
.card-link:hover {
  opacity: 0.1;
}

/**input fields styling**/
.input-fields {
  display: flex;
  margin: 3rpx auto;
  background: #FFFFFF;
  border: 1px solid #E5E5E5;
  box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.25);
  border-radius: 3px;
  width: 229px;
  height: 32px;
  color: #C1C1C1;
}
.picker {
  height: auto 0px;

} 
.input-fields input {
  position: relative;
  top: 5px;
  left: 10px;
}
