
/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 100rpx 0rpx 50rpx 0rpx;
}

.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

/**Card styling**/
.card {
  height: 400rpx;
  background-size: cover !important;
  background-position: center;
  color: white;
  position: relative;
  margin: 5rpx;
  align-content: center;
}
.card-user {
  width: 20rpx;
  height: 15rpx;
  border-radius: 50%;
}
.card-category {
  font-size: 20rpx;
  text-transform: uppercase;
  text-align: left;
}
.card-description {
  display: flex;
  justify-content: center;
  padding: 4rpx;
}
.card-link:hover {
  opacity: 0.1;
}

/**input fields styling**/

.input-fields {
  display: flex;
  margin-top: 100rpx;
  background: #FFFFFF;
  border: 1px solid #E5E5E5;
  box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.25);
  border-radius: 3px;
  width: 40%;
  height: 32px;
  color: #1D1F36;
}
picker {
  color: #808084;
  display: flex;
  padding: 15rpx;
  width:40%;
  margin:20rpx;
} 
.picker view {
  margin-left: 20rpx;
}
.input-fields input {
  text-align:left;
}


